$dark: #333;
$darker: #1c1c1c;
$darkest: #000;
$light: #fff;

html { box-sizing: border-box; } *, *::before, *::after { box-sizing: inherit; }
html {
  height: 100vh;
}
body {
  font-family: 'Press Start 2P', cursive;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: $darkest;
}
audio {
  display: none;
}
.play-area {
  background: $darker;
  position: relative;
  display: grid;
  grid-template-columns: 1fr 1fr;
  width: 700px;
  height: 600px;
}
.court {
  position: relative;
  text-align: center;
  display: grid;
}
.court-left {
  /* the left column is for when the ball is 'out' */
  padding-right: 2px;
  grid-template-columns: 30px 1fr;
  background-image: linear-gradient(to bottom, $light 50%, $darker 50%);
  background-position: right top;
  background-repeat: repeat-y;
  background-size: 2px 20px;
}
.court-right {
  /* the right column is for when the ball is 'out' */
  grid-template-columns: 1fr 30px;
}
.wall {
  background: $dark;
  width: 30px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
  padding: 5px 0;
  fonr-size: 20px;
  overflow: hidden;
  text-align: center;
}
.gone {
  pointer-events: none;
  opacity: 0;
}

.paddle, .ball {
  position: absolute;
}
