css





// Iteration 4: Setup background swith
const bg1=document.getElementById("bg1");
const bg2=document.getElementById("bg2");
const bg3=document.getElementById("bg3");

bg1.onclick=()=>{
card.style.backgroundImage=`url(${bg1.src})`
};
bg2.onclick=()=>{
card.style.backgroundImage=`url(${bg2.src})`
};
bg3.onclick=()=>{
card.style.backgroundImage=`url(${bg3.src})`
};
// Iteration 5: Insert text to the card
const message=document.getElementById("message");
const button=document.getElementById("button");
const cardText=document.getElementById("cardText");

button.onclick=()=>{
cardText.textContent=message.value;
}




